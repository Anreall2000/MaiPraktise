<Window x:Class="DumbSql.CountDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DumbSql"
        mc:Ignorable="d"
        Title="CountDate" Width="300" Height="200" MinHeight="200" MinWidth="300" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Name="Text" Content="Введите промежуток времени&#xD;&#xA;" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <DatePicker Name="From" Margin="10" ToolTip="С какой даты"/>
            </Grid>
            <Grid Grid.Column="1">
                <DatePicker Name="To" Margin="10" ToolTip="По какую дату"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Button Content="Ok" Margin="50,10" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
